function [ table ] = awfulX(Rsize)
% Derivative experiment
% Using an extremely bad X, with only loops as its edges

for j = 1:(Rsize/10)
    degree = j*10 + 1;
    C = cyclic();
    eigvalues = eig(C);
    meanC(j) = eigvalues(degree-1);
    eigvalues = eig(C*C);
    meanC2(j) = eigvalues(degree-1);
    
    X = cyclic(Rsize)+(degree-2)*eye(Rsize);
    eigvalues = eig(X);
    meanX(j) = eigvalues(degree-1);

    zzprod = zigzag(X,C);
    eigvalues = eig(zzprod);
    meanZZ(j) = eigvalues(Rsize*degree-1);

    G = randRegular(Rsize*degree, 4);
    eigvalues = eig(G);
    meanG(j) = eigvalues(Rsize*degree-1);
end

x = 1:(Rsize/10);
figure
plot(x, meanC, '-.', x,meanC2,'-x', x,meanZZ,'-*', x,meanG, '-ro')
legend('eigC','eigC^2','eigZZ', 'eigG');

table = zeros((Rsize/10),5);
table(:,1) = meanX;
table(:,2) = meanC;
table(:,3) = meanC2;
table(:,4) = meanZZ;
table(:,5) = meanG;

end